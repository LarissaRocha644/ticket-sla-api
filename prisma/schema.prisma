generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Priority {
  LOW
  MED
  HIGH
  URGENT
}

enum Status {
  OPEN
  IN_PROGRESS
  RESOLVED
  CLOSED
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  createdAt DateTime @default(now())
  tickets   Ticket[] @relation("AssignedTickets")
}

model Ticket {
  id          String    @id @default(uuid())
  title       String
  description String?
  category    String
  priority    Priority
  status      Status    @default(OPEN)

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  dueAt       DateTime
  resolvedAt  DateTime?

  assigneeId  String?
  assignee    User?     @relation("AssignedTickets", fields: [assigneeId], references: [id])

  audits      TicketAudit[]
}

model TicketAudit {
  id        String   @id @default(uuid())
  ticketId  String
  field     String
  oldValue  String?
  newValue  String?
  createdAt DateTime @default(now())

  ticket    Ticket   @relation(fields: [ticketId], references: [id])
}
